<h2>Cadastrar Usuário</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, 'Nome' %> <br />
  <%= f.text_field :name %></div> <br />

  <div><%= f.label :email, 'E-mail' %> <br />
  <%= f.email_field :email %></div>

  <div><%= f.check_box :receive_email %>
  <%= f.label :receive_email, 'Receber notificações por e-mail' %></div> <br />

  <div><%= f.label :login %> <br />
  <%= f.text_field :login %></div> <br />

  <div><%= f.label :password, 'Senha' %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, 'Confirmar senha' %> <br />
  <%= f.password_field :password_confirmation %></div> <br />

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
